{
  "settings": {
    "analysis": {
      "filter": {
        "english_stop": {
          "type":       "stop",
          "stopwords":  "_english_"
        },
        "english_stemmer": {
          "type":       "stemmer",
          "language":   "english"
        }
      },
      "analyzer": {
        "english_analyzer": {
          "tokenizer":  "standard",
          "filter": [
              "lowercase",
              "english_stop",
              "english_stemmer",
              "word_delimiter"
          ]
        }
      }
    }
  },
  "mappings": {
      "properties": {
        "id": {
            "type": "keyword"
        },
        "document_id": {
            "type": "text",
            "analyzer": "english_analyzer"
        },
        "title": {
            "type": "text",
            "analyzer": "english_analyzer"
        },
        "text": {
            "type": "text",
            "analyzer": "english_analyzer"
        },
        "timestamp": {
            "type": "date",
            "format": "strict_date_optional_time||YYYY-MM-dd HH:mm:ss||YY-MM-dd||epoch_second"
        },
        "page": {
            "type": "long"
        },
        "embedding": {
            "type": "dense_vector",
            "dims": 768,
            "index": true,
            "similarity": "cosine"
        },
        "metadata": {
            "type": "object",
            "dynamic": true
        },
        "company_id": {
            "type": "text"
        },
        "channel_id": {
            "type": "text"
        }
      }
  }
}